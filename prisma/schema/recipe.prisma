model Recipe {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    nameRecipe String
    createdAt DateTime @default(now())
    instructions String  
    preparationTime Int
    image String
    difficulty Int

    categoryId String @db.ObjectId
    category Category @relation(fields: [categoryId], references: [id])

    tools RecipeTool[]
    ingredients RecipeIngredient[]

}